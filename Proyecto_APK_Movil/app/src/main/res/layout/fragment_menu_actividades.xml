<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.MenuActividadesFragment">


  <Button
    android:id="@+id/id_menuActividades_btn_controlDeAguaConsumida"
    android:layout_width="287dp"
    android:layout_height="50dp"
    android:layout_marginTop="32dp"
    android:text="Control de agua consumida"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/id_menuActividades_btn_controlDeAnimo" />

  <Button
    android:id="@+id/id_menuActividades_btn_controlDeAnimo"
    android:layout_width="287dp"
    android:layout_height="50dp"
    android:layout_marginTop="32dp"
    android:text="Control de animo"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/id_menuActividades_btn_controlDeEnergia" />

  <Button
    android:id="@+id/id_menuActividades_btn_controlDeEnergia"
    android:layout_width="287dp"
    android:layout_height="50dp"
    android:layout_marginTop="32dp"
    android:text="Control de energia"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/id_menuActividades_btn_controlDeSueno" />

  <Button
    android:id="@+id/id_menuActividades_btn_controlDeSueno"
    android:layout_width="287dp"
    android:layout_height="50dp"
    android:layout_marginTop="32dp"
    android:text="Control de sueño"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/id_menuActividades_btn_controlDeEstudio" />

  <TextView
    android:id="@+id/id_menuActividades_tv_titulo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:text="Menú de actividades"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/id_menuActividades_btn_controlDeEstudio"
    android:layout_width="287dp"
    android:layout_height="50dp"
    android:layout_marginTop="32dp"
    android:text="Control de estudio"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/id_menuActividades_tv_titulo" />
</androidx.constraintlayout.widget.ConstraintLayout>
